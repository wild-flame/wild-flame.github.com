---
layout: nil
canonical: http://www.wildflame.org
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title>Taffy Lin</title>
    <link href="{{ page.canonical }}/atom.xml" rel="self" />
    <link href="{{ page.canonical }}" />
    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <id>{{ page.canonical }}</id>
    <author>
        <name>Taffy Lin</name>
        <email>wildflame@126.com</email>
    </author>
    {% for post in site.posts %}
    {% if post.layout == 'post' %}
    <entry>
        <title>{{ post.title }}</title>
        <link href="{{ page.canonical }}{{ post.uri }}" />
        <updated>{{ post.date | date_to_xmlschema }}</updated>
        <id>{{ page.canonical }}{{ post.id }}</id>
        <content type="html">{{ post.content | xml_escape }}</content>
    </entry>
    {% endif %}
    {% endfor %}
</feed>
